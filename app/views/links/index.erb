<h1><a href="/links">Links</a></h1>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL:   <a href="<%=link.url%>"><%=link.url%></a>
      Tags:
      <% link.tags.each do |tag| %>
        <a href="/tags/<%=tag.name%>"><%= tag.name %></a>
      <% end %>
    </li>
  <% end %>
</ul>

<form action="/links/new" method="get">
  <input type="submit" value="Add a new link">
</form>
